// CREATE TRANSACTION OBJECTS

// REQUEST OBJECT
{
    "headers": {
        "Content-Type": "application/json",
        "X-API-Key": "YOUR-API-KEY",
    },
    "data": {
        "description": "YOUR-TRANSACTION-DESCRIPTION",
        "frecuency": "YOUR-TRANSACTION-FRECUENCY",
        "scheduled_day": "YOUR-TRANSACTION-SCHEDULED-DAY",

        "digital_currency_code": "DIGITAL-CURRENCY-CODE",
        "digital_currency_amount": "DIGITAL-CURRENCY-AMOUNT",
        "cryptocurrency_code": "CRYPTOCURRENCY-CODE",
        "cryptocurrency_blockchain_id": "CRYPTOCURRENCY-BLOCKCHAIN-ID",

        "funds_source_type": "YOUR-TRANSACTION-FUNDS-SOURCE-TYPE",
        "funds_source_address": "YOUR-TRANSACTION-FUNDS-SOURCE-ADDRESS", //OPTIONAL

        "receiver_address": "YOUR-TRANSACTION-RECEIVER-ADDRESS",

        "customer_email": "CUSTOMER-EMAIL", //OPTIONAL
        "customer_phone": "CUSTOMER-PHONE", //OPTIONAL
    }
}

// RESPONSE OBJECT

{
    "status": "SUCCESS",
    "message": "Transaction created successfully",
    "data": {
        "transaction_id": "YOUR-TRANSACTION-ID",
        "cryptocurrency_code": "CRYPTOCURRENCY-CODE",
        "cryptocurrency_amount": "CRYPTOCURRENCY-AMOUNT",
        "deposit_crypto_address": "DEPOSIT-CRYPTO-ADDRESS",
        "deposit_crypto_amount": "DEPOSIT-CRYPTO-AMOUNT",
        "expiration_timestamp": "DEPOSIT-EXPIRATION-DATE",
        "creation_timestamp": "CREATION-TIMESTAMP",
        "payment_url": "PAYMENT-URL",
    }
}